<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:layout_centerVertical="true"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/welcomeMainLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="80dp">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/helloUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome User"
            android:layout_marginEnd="20dp"
            android:textColor="#000000"
            android:textSize="22dp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/imageView" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/logo5"
            app:layout_constraintStart_toEndOf="@+id/helloUser" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/imagesFlipping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomeMainLogo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ViewFlipper
                android:id="@+id/mainScreenImages"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

        </LinearLayout>

    </RelativeLayout>

        <Button
        android:id="@+id/buttonHowToSafeWorld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagesFlipping"
        android:layout_marginTop="60dp"
        android:background="@drawable/button"
        android:fontFamily="sans-serif-medium"
        android:text="How to save the world?"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18dp" />

</RelativeLayout>