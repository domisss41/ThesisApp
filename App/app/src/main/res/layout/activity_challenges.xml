<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Challanges.Challenges">


    <RelativeLayout
        android:id="@+id/challanges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradienttwo">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:gravity="center"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/plastic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/logo"
                android:fontFamily="sans-serif-medium"
                android:text="Challenges"
                android:textColor="#000000"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/logo5" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/textChallenges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/challanges">

        <View
            android:id="@+id/viewOne"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/statistics"
            android:background="@color/colorPrimaryDark"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textChallenges">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewChallenges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>


</RelativeLayout>